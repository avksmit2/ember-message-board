<button {{action "toggleModal"}} class="btn btn-warning">Update Question</button>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
    <h1>Update Question</h1>
    <div class="container">
      <form {{action 'updateQuestion' question}} >
        <div class="form-group">
          <label for="title">Title:</label>
          {{input value=title id="title" class="form-control" placeholder=question.title required='required'}}
        </div>
        <div class="form-group">
          <label for="author">Author:</label>
          {{input value=author id="author" class="form-control" placeholder=question.author  required='required'}}
        </div>
        <div class="form-group">
          <label for="content">Content:</label>
          {{input value=content id="content" class="form-control" placeholder=question.content required='required'}}
        </div>
        <div class="form-group">
          <label for="notes">Notes:</label>
          {{input value=notes id="notes" class="form-control" placeholder=question.notes required='required'}}
        </div>
        <div class="form-group">
          <label for="solved">Solved:</label>
          {{input value=solved id="solved" class="form-control" placeholder=question.solved required='required'}}
        </div>
        <div class="form-group">
          <label for="icon">Your Icon:</label>
          {{input value=icon id="icon" class="form-control" placeholder=question.icon required='required'}}
        </div>
        <button class="btn btn-success">Save</button>
      </form>
    </div>
  {{/modal-dialog}}
{{/if}}
