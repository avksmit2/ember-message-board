<button {{action "toggleModal"}} class="btn btn-success">New Answer</button>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
    <h1>New Answer</h1>
    <div class="container">
      <form {{action 'saveAnswer' on='submit'}}>
        <div class="form-group">
          <label for="author">Author:</label>
          {{input value=author id="author" class="form-control" required='required'}}
        </div>
        <div class="form-group">
          <label for="content">Content:</label>
          {{input value=content id="content" class="form-control" required='required'}}
        </div>
        <button class="btn btn-success">Save</button>
      </form>
    </div>
  {{/modal-dialog}}
{{/if}}
